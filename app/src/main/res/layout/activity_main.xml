<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.MainActivity">
    <TextView
        android:id="@+id/text_view_name_of_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="@string/baghdad"
        android:textColor="@color/fontColor"
        android:textSize="@dimen/margin_Size36"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_date_of_the_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Size8"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/_29april"
        android:textColor="@color/fontColor"
        android:textSize="@dimen/margin_Size36"
        app:layout_constraintEnd_toEndOf="@+id/text_view_name_of_city"
        app:layout_constraintStart_toStartOf="@+id/text_view_name_of_city"
        app:layout_constraintTop_toBottomOf="@+id/text_view_name_of_city" />

    <TextView
        android:id="@+id/text_view_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Size8"
        android:fontFamily="@font/abril_fatface"
        android:text="@string/temperature"
        android:textColor="@color/fontColor"
        android:textSize="@dimen/margin_Size40"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/text_view_date_of_the_day"
        app:layout_constraintStart_toStartOf="@+id/text_view_date_of_the_day"
        app:layout_constraintTop_toBottomOf="@+id/text_view_date_of_the_day" />

    <TextView
        android:id="@+id/text_view_suggested_kits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_Size60"
        android:fontFamily="@font/poppins"
        android:text="@string/suggestion_for_today_weather"
        android:textColor="@color/fontColor"
        android:textSize="@dimen/margin_Size20"
        app:layout_constraintEnd_toEndOf="@+id/text_view_temperature"
        app:layout_constraintStart_toStartOf="@+id/text_view_temperature"
        app:layout_constraintTop_toBottomOf="@+id/text_view_temperature" />


    <View
        android:id="@+id/view_divider"
        android:layout_width="328dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@color/fontColor"
        app:layout_constraintEnd_toEndOf="@+id/text_view_suggested_kits"
        app:layout_constraintStart_toStartOf="@+id/text_view_suggested_kits"
        app:layout_constraintTop_toBottomOf="@+id/text_view_suggested_kits" />

    <ImageView
        android:id="@+id/imageOutfit"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:src="@drawable/imagewinter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_divider" />




</androidx.constraintlayout.widget.ConstraintLayout>